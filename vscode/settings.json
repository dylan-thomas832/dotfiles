{
    // Don't want telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Miscellaneous
    "explorer.confirmDragAndDrop": false,
    "window.zoomLevel": 0,
    "vsicons.dontShowNewVersionMessage": true,
    // Editor settings
    "editor.wordWrap": "on",
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.autoIndent": true,
    "editor.mouseWheelZoom": true,
    "editor.cursorBlinking": "expand",
    "editor.renderLineHighlight": "gutter",
    "editor.showFoldingControls": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontFamily": "'DejaVu Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    // Workbench settings
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    // Files to exclude in Explorer tab
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/__pycache__": true,
        "**/**/**/*.pyc": true
    },
    // Force good behavior for html files
    "[html]": {
        "editor.wordWrap": "on",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": true
    },
    // Force good behavior for markdown files
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": true
    },
    // Terminal settings
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    // Standard Python settings
    // "python.pythonPath": "path\\to\\python.exe",
    "[python]": {
        "editor.wordWrap": "on",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.autoIndent": true
    },
    // Pylint settings (style/code linting)
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--disable="
    ],
    // Pep8 settings (style/formatting linting)
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--max-line-length=120",
        "--extension-pkg-whitelist=numpy",
        "--ignore=",
    ],
    // Pydocstyle settings (documentation linting)
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": [
        "--ignore="
    ],
    // Latex Workshop settings
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "C:/texlive/2016/bin/win32/latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "C:/texlive/2016/bin/win32/pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "C:/texlive/2016/bin/win32/bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    // Git & Git Lens settings
    "git.autofetch": true,
    //"git.path": "path\\to\\git.exe",
    // Code spell-checker settings
    "cSpell.userWords": [
        "Astromechanics",
        "Blacksburg",
        "Cubesat",
        "DARPA",
        "Gurobi",
        "Invariance",
        "Kalman",
        "Lyapunov",
        "Matlab",
        "Transductive",
        "Uncomment",
        "assimulo",
        "covariances",
        "cventry",
        "linalg",
        "nonsingular",
        "numba",
        "numpy",
        "pylint",
        "pyplot",
        "remediate",
        "scipy",
        "undeformed",
        "xlabel",
        "ylabel"
    ],
}